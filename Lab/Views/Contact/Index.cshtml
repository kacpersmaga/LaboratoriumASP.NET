@model List<ContactModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Kontakty</h2>
<a class="btn btn-primary" asp-action="Add" asp-controller="Contact">Dodaj kontakt</a>
<h4>Lista kontaktów</h4>

@if (Model.Count > 0){
    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Category)
            </th>
            <th>Akcje</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var entry in @Model)
        {
        <tr>
            <td>
                @entry.FirstName
            </td>
            <td>
                @entry.LastName
            </td>
            <td>
                @entry.Category.GetDisplayName()
            </td>
            <td>
                <div>
                    <a class="btn btn-primary"
                       asp-action="Edit"
                       asp-controller="Contact"
                       asp-route-id=@entry.Id>Edytuj</a>
                    <a class="btn btn-primary"
                       asp-action="Details"
                       asp-controller="Contact"
                       asp-route-id=@entry.Id>Szczegóły</a>
                    <a class="btn btn-primary"
                       asp-action="Delete"
                       asp-controller="Contact"
                       asp-route-id=@entry.Id
                       onclick="return confirm('Czy na pewno chcesz usunąć ten kontakt?');">Usuń</a>
                </div>
            </td>
        </tr>
        }
        </tbody>
    </table>
}

